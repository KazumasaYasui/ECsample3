<h1>商品一覧ページ</h1>
<p id="notice"><%= notice %></p>
<div class="index_container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-4 products_box">
            <%= link_to product_path(product) do %>
              <% if product.product_images.present? %>
                <div class="img_width_index">
                  <%= attachment_image_tag product.product_images.first, :image, :fill, 250, 250, format: "jpg" %>
                </div>
              <% else %>
                <div class="img_width_index">
                  <%= image_tag '/images/sample_image_1.jpg', size: '250x250' %>
                </div>
              <% end %>
            <% end %>
            <div class="products_name_box">商品名：
              <%= product.name %>
            </div>
            <div class="products_price_box">価格：
              <%= number_to_currency product.price,
                format: '%n%u', unit: '円', precision: 0 %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="paginate_box">
    <%= paginate @products %>
  </div>
</div>