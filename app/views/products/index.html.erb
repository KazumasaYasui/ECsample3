<h1>商品一覧ページ</h1>

<div class="index_container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-4 products_box">
            <%= link_to product_path(product) do %>
              <div id= "<%= product.id %>" class="carousel slide  carousel_width_index" data-ride="carousel">
                <div class="carousel-inner">
                  <% if product.product_images.present? %>
                    <div class="item active">
                      <%= attachment_image_tag product.product_images.first, :image, :fill, 250, 250, format: "jpg" %>
                    </div>
                    <% product.product_images.drop(1).each do |image| %>
                      <div class="item">
                        <%= attachment_image_tag image, :image, :fill, 250, 250, format: "jpg" %>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="item active">
                      <%= image_tag 'sample_image_1.jpg', size: '250x250' %>
                    </div>
                    <div class="item">
                      <%= image_tag 'sample_image_2.jpg', size: '250x250' %>
                    </div>
                    <div class="item">
                      <%= image_tag 'sample_image_3.jpg', size: '250x250' %>
                    </div>
                    <div class="item">
                      <%= image_tag 'sample_image_4.jpg', size: '250x250' %>
                    </div>
                  <% end %>
                </div>
                <a class="left carousel-control" href= "#<%= product.id %>" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                <a class="right carousel-control" href= "#<%= product.id %>" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
              </div>
              <div class="products_name_box">商品名：
                <%= product.name %>
              </div>
              <div class="products_price_box">価格：
                <%= product.price %>円
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="paginate_box">
    <%= paginate @products %>
  </div>
</div>